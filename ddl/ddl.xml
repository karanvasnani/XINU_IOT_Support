<?xml version="1.0" encoding="UTF-8"?>
<DDL>
	<Device>
		<Device_Type>Actuator</Device_Type>
		<Description>
			<Name>Buzzer</Name>
			<Id>buz</Id>
			<Device_Logic>Digital</Device_Logic>
			<Verbose_Description></Verbose_Description>
			<Vendor></Vendor>
			<Model></Model>
			<Physical>
				<Operating_environment>
					<Pressure>
						<Range>
							<Min>0</Min>
							<Max>1</Max>
						</Range>
					</Pressure>
				</Operating_environment>
			</Physical>
		</Description>
		<Interface>
			<Connection>
				<Pin1>DGND</Pin1>
				<Pin2>GPIO_60</Pin2>
			</Connection>
			<Reading>
				<Pin>
					<Type>GPIO</Type>
					<Value>60</Value>
				</Pin>
				<Measurement>Sound</Measurement>
				<Unit></Unit>				
			</Reading>
			<Computation>
				<Type>write</Type>
				<Expression></Expression>
				<Range>
					<Min>0</Min>
					<Max>1</Max>
				</Range>
			</Computation>
		</Interface>
	</Device>
	
	<Device>
		<Device_Type>Sensor</Device_Type>
		<Description>
			<Name>Pressure Sensor</Name>
			<Id>fsr</Id>
			<Device_Logic>Analog</Device_Logic>
			<Verbose_Description>Round Force-Sensitive Resistor</Verbose_Description>
			<Vendor>Interlink Electronics</Vendor>
			<Model>FSR 402</Model>
			<Physical>
				<Operating_environment>
					<Pressure>
						<Range>
							<Min>0</Min>
							<Max>100N</Max>
						</Range>
					</Pressure>
				</Operating_environment>
			</Physical>
		</Description>
		<Interface>
			<Connection>
				<Pin1>VDD_3V3</Pin1>
				<Pin2>GNDA_ADC</Pin2>
				<Pin3>AIN0</Pin3>
			</Connection>
			<Reading>
				<Pin>
					<Type>AIN</Type>
					<Value>0</Value>
				</Pin>
				<Measurement>Force</Measurement>
				<Unit>Newton</Unit>				
			</Reading>
			<Computation>
				<Type>Formula</Type>
				<Expression>output=(adc_val*(1.8/4096)*1000000)/(80*300*(3.3-(adc_val*(1.8/4096))))</Expression>
				<Range>
					<Min>0</Min>
					<Max>100N</Max>
				</Range>
			</Computation>
		</Interface>
	</Device>
	
	<Device>
		<Device_Type>Sensor</Device_Type>
		<Description>
			<Name>Capacitive Touch Sensor</Name>
			<Id>cts</Id>
			<Device_Logic>Digital</Device_Logic>
			<Verbose_Description>Capacitive Touch Sensor</Verbose_Description>
			<Vendor>Adafruit</Vendor>
			<Model>AT42QT1010</Model>
			<Physical>
				<Operating_environment>
					<Pressure>
						<Range>
							<Min>0</Min>
							<Max>1</Max>
						</Range>
					</Pressure>
				</Operating_environment>
			</Physical>
		</Description>
		<Interface>
			<Connection>
				<Pin1>VDD_3V3</Pin1>
				<Pin2>DGND</Pin2>
				<Pin3>GPIO_60</Pin3>
			</Connection>
			<Reading>
				<Pin>
					<Type>GPIO</Type>
					<Value>60</Value>
				</Pin>
				<Measurement>Touch</Measurement>
				<Unit></Unit>				
			</Reading>
			<Computation>
				<Type>read</Type>
				<Expression></Expression>
				<Range>
					<Min>0</Min>
					<Max>1</Max>
				</Range>
			</Computation>
		</Interface>
	</Device>
</DDL>
